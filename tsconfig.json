{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES6",        
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "declaration": true,
        "lib": ["es6", "scripthost", "es2017"],
        "outDir": "dist",
        "rootDir": "./",
        "allowJs": true
    },
    "include": [
        "lib",
        "test"
    ],
    "exclude": [
        "node_modules",
        "exclude"
    ]    
}